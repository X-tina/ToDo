<div class = "modal-header">
  <h1>New task:</h1>

  <%= simple_form_for task do |f| %>
    <div class = "modal-body">
      <%= f.input :note %>
      <%= f.input :completed, as: :string, input_html: { class: "datepicker" } %>
    </div>
    <div class = "modal-footer">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>