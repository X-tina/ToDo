<!DOCTYPE html>
<html>
<head>
  <title>To Do</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="row-fluid">
    <div class="span10 offset1">
      <div class="hero-unit">
        <div class="logout"> 
          <strong> Hello, <%= current_user.name %> </strong>
          <span> <%= link_to 'logout', destroy_user_session_path, method: :delete %> </span>
        </div>      
          
        <div class="center" style="text-align: center;">
          <h1>To Do<h1>
          	<%= link_to "New task", new_task_path, class: 'btn btn-primary', remote: true %>
        </div>
      </div>
    </div>
  </div>

<%= yield %>

</body>
</html>
